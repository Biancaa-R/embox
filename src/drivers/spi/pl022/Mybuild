package embox.driver.spi

module pl022_spi_drv {
	option string log_level="LOG_ERR"

	source "pl022_spi_drv.c"

	depends embox.driver.spi.core
}

module pl022_spi0 {
	option string log_level="LOG_ERR"
	option boolean use_board_conf=false

	option number base_addr = 0
	option number irq_num = 0

	source "pl022_spi0.c"
	@NoRuntime depends embox.driver.spi.spi0_dev0

	depends embox.driver.spi.pl022_spi_drv
}

module pl022_spi1 {
	option string log_level="LOG_ERR"
	option boolean use_board_conf=false

	option number base_addr = 0
	option number irq_num = 0

	source "pl022_spi1.c"
	@NoRuntime depends embox.driver.spi.spi1_dev0

	depends embox.driver.spi.pl022_spi_drv
